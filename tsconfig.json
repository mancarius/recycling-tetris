{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "vitest",
      "node"
    ],
    "paths": {
      "@config": [
        "./src/configs/configs.ts"
      ],
      "@view/*": [
        "./src/views/*"
      ],
      "@component/*": [
        "./src/components/*"
      ],
      "@util/*": [
        "./src/utils/*"
      ],
      "@service/*": [
        "./src/services/*"
      ],
      "@type/*": [
        "./src/@types/*"
      ],
      "@enum/*": [
        "src/constants/enums/*"
      ],
      "@composable/*": [
        "./src/composables/*"
      ],
      "@asset/*": [
        "./src/assets/*"
      ],
      "@/*": [
        "./src/*"
      ],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}